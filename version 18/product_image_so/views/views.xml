<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_product_image" model="ir.ui.view">
        <field name="name">sale.order.line.form.inherit.product.image</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='order_lines']//field[@name='product_template_id']" position="after">
                <field name="product_image" widget="image"
                       options="{'preview_image': 'product_image', 'size': [40, 40]}" string="Image" width="50px"
                       optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
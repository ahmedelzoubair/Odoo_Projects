<odoo>
    <data>
        <record id="purchase_order_form_analytic_distribution" model="ir.ui.view">
            <field name="name">purchase.order.form.analytic.distribution</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='date_planned_div']" position="after">
                    <field name="analytic_distribution" widget="analytic_distribution" invisible="1"/>
                </xpath>

            </field>
        </record>

        <record id="inherit_view_purchase_requisition_form_analytic_distribution" model="ir.ui.view">
            <field name="name">inherit.view.purchase.requisition.form.analytic.distribution</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <field name="reference" position="after">
                    <field name="analytic_distribution" widget="analytic_distribution"/>
                </field>

            </field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add total field at the bottom of components page -->
    <record id="mrp_bom_form_view_inherit_total" model="ir.ui.view">
        <field name="name">mrp.bom.form.inherit.total</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='components']//field[@name='bom_line_ids']" position="after">
                <group class="oe_subtotal_footer oe_right">
                    <field name="total_component_qty" string="Total QTY" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>


<!--     Add total field at the bottom of components Manufacturing Orders -->
    <record id="mrp_production_form_view_inherit_total" model="ir.ui.view">
        <field name="name">mrp.production.form.view.inherit.total</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='components']//field[@name='move_raw_ids']" position="after">
                <group class="oe_subtotal_footer oe_right">
                    <field name="total_product_uom_qty" string="Total To Consume" readonly="1"/>
                    <field name="total_quantity" string="Total Consume" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_model_relations_exporter_form" model="ir.ui.view">
        <field name="name">model.relations.exporter.form</field>
        <field name="model">model.relations.exporter</field>
        <field name="arch" type="xml">
            <form string="Export Model Relations">
                <group>
                    <field name="name"/>
                    <field name="relations_output" nolabel="1" widget="textarea"/>

                </group>
                <footer>
                    <button string="Export Relations" type="object" name="export_relations" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_model_relations_exporter" model="ir.actions.act_window">
        <field name="name">Export Model Relations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">model.relations.exporter</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            id="menu_model_relations_exporter"
            name="Export Model Relations"
            action="action_model_relations_exporter"
            parent="menu_technical"
            sequence="1"/>
</odoo>
